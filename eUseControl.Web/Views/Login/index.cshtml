
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}
@using System.Web.Optimization;
@using System.Web.Mvc
@model eUseControl.Web.Models.UserLogin


<div class="container-center" style="margin:auto  auto 0">
    <div class="view-header">
        <div class="header-icon">
            <i class="pe page-header-icon pe-7s-unlock"></i>
        </div>
        <div class="header-title">
            <h3>Login</h3>

        </div>
    </div>

    <div class="panel panel-filled">
        <div class="panel-body">
            @Html.ValidationSummary(true)
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Credential, new
                    {
                        placeholder = "...",
                        title = "Introduceti numele de utilizator",
                        value = "",
                        name = "nume",
                        id = "nume",
                        @class = "form-control",
                        type="username"
                    })
                    <span class="help-block small">Your unique username to app</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Password, new
                    {
                        placeholder = "...",
                        title = "Introduceti parola",
                        value = "*",
                        name = "parola",
                        id = "parola",
                        @class = "form-control",
                        type ="password"
                    })
                    <span class="help-block small">Your strong password</span>
                </div>
                <div style="text-align:center">
                    <button type="submit" class="btn btn-outline-dark">Submit</button>
                    <a class="btn btn btn-outline-dark" href="@Url.Action("Index", "Register")"">Register</a>
                    <a class="btn btn btn-outline-dark" href="@Url.Action("Index", "Home")"">Home</a>
                </div>
            }
        </div>
    </div>
</div>
